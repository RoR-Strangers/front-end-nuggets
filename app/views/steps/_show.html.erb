<%= markdown(@step.instruction) %>
<%= content_tag "div", id: "insert", data: {html: @step.html,
                                            css: @step.css,
                                            javascript: @step.javascript} do %>
<% end %>
<% if !current_user.nil? and current_user.admin? %>
  <%= link_to "edit", edit_step_path(@step, :lesson_id => @step.lesson_id), class: "btn btn-xs btn-primary" %>
  <%= link_to "delete", step_path(@step), method: :delete, 
                        data: { confirm: "Are you sure you want to delete?" },
                        class: "btn btn-xs btn-danger" %>
<% end %>
