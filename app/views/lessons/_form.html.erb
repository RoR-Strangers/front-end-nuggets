<%= render 'shared/errors', obj: @lesson %>
<div class="row">
    <%= form_for(@lesson) do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    <% end %>
</div>

